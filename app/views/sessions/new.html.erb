<%= form_for :session, url: login_path do |f| %>
  <%= f.label :email, "mail" %><br>
  <%= f.email_field :email %><br>

  <%= f.label :password, "pass" %><br>
  <%= f.password_field :password %><br>

  <%= f.check_box :remember_me %>
  <%= f.label :remember_me, "never forget" %><br>

  <%= f.submit "log on", class: 'button' %><br>
<% end %>